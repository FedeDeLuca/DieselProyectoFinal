
<body class="pb-5 body-interactive">
<section class="mt-5">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
       <h2 class="text-center">
         ¿Querés ponerte en contacto con nosotros?
       </h2>
       <h3 class="text-center">
         Dejanos tu mensaje
       </h3>
  
</section>
   <section class="d-flex justify-content-center">
       <div class="col-10 col-lg-4 bg-light pt-100 pb-10">
       <div class="my-4 mx-4">
      <form action="email" method="post">
        {{#each arrWarning}}
        <div class="alert alert-danger d-flex align-items-center" role="alert">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
  <div>
    {{msg}}
  </div>
    </div>
        {{/each}}
        <label for="name" class="form-label">Nombre y Apellido</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Ingrese su nombre" autofocus
        {{#if formData.name}} value="{{formData.name}}" {{/if}}
        >
        <label for="email" class="form-label mt-2">Email</label>
        <input type="text" id="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="ejemplo@contacto.com"
        {{#if formData.email}} value="{{formData.email}}" {{/if}}>
        <label for="message" class="form-label mt-2">Ingrese su mensaje</label>
         <textarea class="form-control"  id="message" name="message" rows="3">{{formData.message}}</textarea>
         <input type="submit" value="Enviar" class="btn btn-primary text-white mt-3 mb-2">
         {{#if statusMessage}}
              <div class="alert alert-success d-flex align-items-center bi bi-envelope-check" role="alert">
  <div>
    {{statusMessage}}
  </div>
</div>
        {{/if}}
      </form>
    </div>
 
  
  
  </body>
